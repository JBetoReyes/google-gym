{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "types": [
      "nativewind/types"
    ],
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@shared/*": [
        "../../packages/shared/src/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@services/*": [
        "./services/*"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "hooks",
    "services",
    "*.ts",
    "*.d.ts",
    "nativewind-env.d.ts"
  ]
}